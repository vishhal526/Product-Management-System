@model Product_Management_System.Models.CustomerModel
<main id="main" class="main">
    <h4 class="text-center">
        @(Model.CustomerID == null ? "Customer Form" : "Customer Edit Form")
    </h4>
    @Html.HiddenFor(x => x.CustomerID)
    <form class="row g-3" method="post" asp-action="CustomerSave" asp-controller="Customer">
        <div class="col-md-6">
            <label class="form-label">Customer Name</label>
            <input type="text" class="form-control" asp-for="CustomerName" placeholder="Customer Name">
            <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Home Address</label>
            <input type="text" class="form-control" asp-for="HomeAddress" placeholder="Home Address">
            <span asp-validation-for="HomeAddress" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Mobile No</label>
            <input type="number" class="form-control" asp-for="MobileNo" placeholder="Mobile No">
            <span asp-validation-for="MobileNo" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">GST NO</label>
            <input type="text" class="form-control" asp-for="GSTNO" placeholder="GST NO">
            <span asp-validation-for="GSTNO" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">City Name</label>
            <input type="text" class="form-control" asp-for="CityName" placeholder="City Name">
            <span asp-validation-for="CityName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Pin Code</label>
            <input type="text" class="form-control" asp-for="PinCode" placeholder="Pin Code">
            <span asp-validation-for="PinCode" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Net Amount</label>
            <input type="number" class="form-control" asp-for="NetAmount" placeholder="Net Amount">
            <span asp-validation-for="NetAmount" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">User Id</label>
            <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                <option value="">Select User</option>
            </select>
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="Customer" asp-action="CustomerList">
                <button type="button" class="btn btn-secondary">Cancel</button>
            </a>
        </div>
    </form>
</main>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}