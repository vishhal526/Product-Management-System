@model Product_Management_System.Models.OrdersModel
<main id="main" class="main">
    <h4 class="text-center">
        @(Model.OrderID == null ? "Order Form" : "Order Edit Form")
    </h4>
    <form class="row g-3" method="post" asp-action="OrderSave" asp-controller="Order">
        @Html.HiddenFor(x => x.OrderID)
        <div class="col-md-6">
            <label class="form-label">Order Date</label>
            <input type="date" class="form-control" asp-for="OrderDate" placeholder="OrderDate">
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Customer Name</label>
            <select class="form-control" asp-for="CustomerID" asp-items="@(new SelectList(ViewBag.CustomerList, "CustomerID", "CustomerName"))">
                <option value="">Select Customer</option>
            </select>
            <span asp-validation-for="CustomerID" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Payment Mode</label>
            <input type="text" class="form-control" asp-for="PaymentMode" placeholder="Payment Mode">
            <span asp-validation-for="PaymentMode" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Total Amount</label>
            <input type="number" class="form-control" asp-for="TotalAmount" placeholder="Total Amount">
            <span asp-validation-for="TotalAmount" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Shipping Address</label>
            <input type="text" class="form-control" asp-for="ShippingAddress" placeholder="Shipping Address">
            <span asp-validation-for="ShippingAddress" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">User Name</label>
            <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                <option value="">Select User</option>
            </select>
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="Order" asp-action="OrderList">
                <button type="button" class="btn btn-secondary">Cancel</button>
            </a>
        </div>
    </form>
</main>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}