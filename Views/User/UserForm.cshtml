@model Product_Management_System.Models.UserModel
<main id="main" class="main">
    <h4 class="text-center">
        @(Model.UserID == null ? "User Form" : "User Edit Form")
        </h4>
    <form class="row g-3" asp-action="UserSave" asp-controller="User" method="post">
        @Html.HiddenFor(x => x.UserID)
        <div class="col-md-6">
            <label class="form-label">User Name</label>
            <input type="text" class="form-control" asp-for="UserName" placeholder="User Name">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" asp-for="Password" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Mobile Number</label>
            <input type="text" class="form-control" asp-for="MobileNo" placeholder="Mobile Number">
            <span asp-validation-for="MobileNo" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Address</label>
            <input type="text" class="form-control" asp-for="Address" placeholder="Address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="isActive"></label>
            <select asp-for="isActive" class="form-control">
                <option value="">-- Select --</option>
                <option value="true" selected="selected">Active</option>
                 <option value="false">Inactive</option>
            </select>
            <span asp-validation-for="isActive" class="text-danger"></span>
        </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a asp-controller="User" asp-action="UserList">
                    <button type="button" class="btn btn-secondary">Cancel</button>
                </a>
            </div>
    </form>
</main>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
