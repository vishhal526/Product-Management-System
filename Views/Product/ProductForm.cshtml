@model Product_Management_System.Models.ProductModel
<main id="main" class="main">
    <h4 class="text-center">
        @(Model.ProductID == null ? "Product Form" : "Product Edit Form")
    </h4>
    <form class="row g-3" method="post" asp-action="ProductSave" asp-controller="Product">
        @* <div asp-validation-summary="ModelOnly" class="text-danger"> *@

        @Html.HiddenFor(x => x.ProductID)
        
        <div class="col-md-6">
            <label class="form-label">Product Name</label>
            <input type="text" class="form-control" asp-for="ProductName" placeholder="ProductName">
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Product Price</label>
            <input type="number" class="form-control" asp-for="ProductPrice" placeholder="ProductPrice">
            <span asp-validation-for="ProductPrice" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Product Code</label>
            <input type="text" class="form-control" asp-for="ProductCode" placeholder="ProductCode">
            <span asp-validation-for="ProductCode" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" placeholder="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">User Name</label>
            <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                <option value="">Select User</option>
            </select>
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="Product" asp-action="ProductList">
                <button type="button" class="btn btn-secondary">Cancel</button>
            </a>
        </div>
        @* </div> *@
    </form>
</main>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

